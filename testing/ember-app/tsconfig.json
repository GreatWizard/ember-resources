{
  "extends": "@tsconfig/ember/tsconfig.json",
  "glint": {
    "environment": [
       "ember-loose",
       "ember-template-imports"
    ]
  },
  "compilerOptions": {
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "ember-app/tests/*": [
        "tests/*"
      ],
      "ember-app/*": [
        "app/*"
      ],
      "ember-resources/*": ["../../ember-resources/dist/*"],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "type-tests/**/*",
    "types/**/*"
  ],
  "references": [
    { "path": "../../ember-resources" }
  ]
}
